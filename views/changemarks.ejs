<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  <link rel=”stylesheet” href=”https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css” />
  <link rel="stylesheet" href="css/changemarks.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Merriweather&family=Montserrat:wght@100;300;700;900&family=Playfair+Display:wght@500&family=Sacramento&family=Teko&family=Ubuntu&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/57370804b4.js" crossorigin="anonymous"></script>
</head>

<body>
  <header>

    <!-- Navbar -->

    <div id="navbar-cont" class="navbar-container">
      <nav class="navbar navbar-light" style="background-color: #600E0E;">
        <h6><img class="nav-img nav-phone" src="Images/phone.png">: +971 4 337 7475</h6>
        <h6><img class="nav-img nav-email" src="Images/email.png">: someone@gmail.com</h6>
      </nav>
      <div class="glass navbar">
        <h2 class="glass-head">
          <img class="glass-logo" src="Images/main-logo.png">NITTE UNIVERSITY</img>
          <button class="btn navbar-btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBothOptions" tabindex="-1" aria-controls="offcanvasWithBothOptions">
            <i class="fa-solid fa-bars"></i>
          </button>
        </h2>
      </div>

      <div class="offcanvas offcanvas-end" data-bs-scroll="true" tabindex="-1" id="offcanvasWithBothOptions" aria-labelledby="offcanvasWithBothOptionsLabel">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="offcanvasWithBothOptionsLabel"> <img class="offcanvas-logo" src="Images/main-logo.png">Nitte University</h5>
          <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close" style="filter: invert(1);"></button>
        </div>
        <div class="offcanvas-body">
          <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link" href="/adminpage">Home</a></li>
            <li class="nav-item"><a class="nav-link" href="/adminrequest">Requests</a></li>
            <li class="nav-item"><a class="nav-link active" href="/newadmission">New Admissions</a></li>
            <li class="nav-item"><a class="nav-link active" href="/addmarks">Update Marks</a></li>
            <li class="nav-item"><a class="nav-link active" href="/">Log Out</a></li>
          </ul>
        </div>
      </div>
    </div>
  </header>
  <main>

    <!-- Main Content -->
    <% if(details.middleName != ''){%>
    <div class="col-lg-2 name">
      <h1><%= details.firstName+" "+details.middleName+" "+details.lastName %><div class="space"></div><%= details.usn %></h1>
    </div>
    <% }else{ %>
    <div class="col-lg-2 name">
      <h1><%= details.firstName+" "+details.lastName %><div class="space"></div><%= details.usn %></h1>
    </div>
    <% }; %>
    <div class="noti-container">
      <center>
        <h3>
          Choose Semester:
          <form action="/changemarks" method="post">
            <label class="course_label" for="course">
              <select class="course_input form-control" name="chsem">
                <% if(details.semester == "First"){ %>
                <option value="First">First Semester</option>
                <% }if(details.semester == "Second"){ %>
                  <% if(active === true){ %>
                    <option value="" disabled selected hidden><%= report.sem %> Semester</option>
                  <% } %>
                <option value="First">First Semester</option>
                <option value="Second">Second Semester</option>
                <% }if(details.semester == "Third"){ %>
                  <% if(active === true){ %>
                    <option value="" disabled selected hidden><%= report.sem %> Semester</option>
                  <% } %>
                <option value="First">First Semester</option>
                <option value="Second">Second Semester</option>
                <option value="Third">Third Semester</option>
                <% }if(details.semester == "Fourth"){ %>
                  <% if(active === true){ %>
                    <option value="" disabled selected hidden><%= report.sem %> Semester</option>
                  <% } %>
                <option value="First">First Semester</option>
                <option value="Second">Second Semester</option>
                <option value="Third">Third Semester</option>
                <option value="Fourth">Fourth Semester</option>
                <% }if(details.semester == "Fifth"){ %>
                  <% if(active === true){ %>
                    <option value="" disabled selected hidden><%= report.sem %> Semester</option>
                  <% } %>
                <option value="First">First Semester</option>
                <option value="Second">Second Semester</option>
                <option value="Third">Third Semester</option>
                <option value="Fourth">Fourth Semester</option>
                <option value="Fifth">Fifth Semester</option>
                <% }if(details.semester == "Sixth"){ %>
                  <% if(active === true){ %>
                    <option value="" disabled selected hidden><%= report.sem %> Semester</option>
                  <% } %>
                <option value="First">First Semester</option>
                <option value="Second">Second Semester</option>
                <option value="Third">Third Semester</option>
                <option value="Fourth">Fourth Semester</option>
                <option value="Fifth">Fifth Semester</option>
                <option value="Sixth">Sixth Semester</option>
                <% }if(details.semester == "Seventh"){ %>
                  <% if(active === true){ %>
                    <option value="" disabled selected hidden><%= report.sem %> Semester</option>
                  <% } %>
                <option value="First">First Semester</option>
                <option value="Second">Second Semester</option>
                <option value="Third">Third Semester</option>
                <option value="Fourth">Fourth Semester</option>
                <option value="Fifth">Fifth Semester</option>
                <option value="Sixth">Sixth Semester</option>
                <option value="Seventh">Seventh Semester</option>
                <% }if(details.semester == "Eight"){ %>
                  <% if(active === true){ %>
                    <option value="" disabled selected hidden><%= report.sem %> Semester</option>
                  <% } %>
                <option value="First">First Semester</option>
                <option value="Second">Second Semester</option>
                <option value="Third">Third Semester</option>
                <option value="Fourth">Fourth Semester</option>
                <option value="Fifth">Fifth Semester</option>
                <option value="Sixth">Sixth Semester</option>
                <option value="Seventh">Seventh Semester</option>
                <option value="Eight">Eight Semester</option>
                <% } %>
              </select>
            </label>
            <button type="submit" class="btn btn-primary" name="button">Search</button>
          </form>
        </h3>
      </center>
      <form action="/changemarks" method="post">
        <div class="notis">
          <div class="notis-cont text-center p-3">
            <div class="row p-3">
              <div class="col-lg">
                <h4>Subject</h4>
              </div>
              <div class="col-lg">
                <h4>Marks</h4>
              </div>
              <div class="col-lg">
                <h4>Edit Marks</h4>
              </div>
            </div>
            <% if (active === true){ %>

            <div class="row p-3">
              <div class="col-lg">
                <h4>Subject 1</h4>
              </div>
              <div class="col-lg">
                <h4><%= report.subject1 %></h4>
              </div>
              <div class="col-lg">
                <input type="number" step="0.01" name="subject1">
              </div>
            </div>
            <div class="row p-3">
              <div class="col-lg">
                <h4>Subject 2</h4>
              </div>
              <div class="col-lg">
                <h4><%= report.subject2 %></h4>
              </div>
              <div class="col-lg">
                <input type="number" step="0.01" name="subject2">
              </div>
            </div>
            <div class="row p-3">
              <div class="col-lg">
                <h4>Subject 3</h4>
              </div>
              <div class="col-lg">
                <h4><%= report.subject3 %></h4>
              </div>
              <div class="col-lg">
                <input type="number" step="0.01" name="subject3">
              </div>
            </div>
            <div class="row p-3">
              <div class="col-lg">
                <h4>Subject 4</h4>
              </div>
              <div class="col-lg">
                <h4><%= report.subject4 %></h4>
              </div>
              <div class="col-lg">
                <input type="number" step="0.01" name="subject4">
              </div>
            </div>
            <div class="row p-3">
              <div class="col-lg">
                <h4>Subject 5</h4>
              </div>
              <div class="col-lg">
                <h4><%= report.subject5 %></h4>
              </div>
              <div class="col-lg">
                <input type="number" step="0.01" name="subject5">
              </div>
            </div>
            <div class="row p-3">
              <div class="col-lg">
                <h4>SGPA</h4>
              </div>
              <div class="col-lg">
                <h4><%= report.sgpa %></h4>
              </div>
              <div class="col-lg">
                <input type="number" step="0.01" name="sgpa">
              </div>
            </div>

            <% } %>
          </div>
        </div>
        <div class="d-flex m-4">
          <a class="back" href="/addmarks"><button class="btn btn-lg btn-primary" type="button" name="button">BACK</button></a>
          <button class="confirm btn btn-lg btn-primary" type="submit" name="button">Confirm Changes</button>
        </div>
      </form>
      <form class="prom-form" action="/changemarks" method="post">
        <input type="hidden" name="promcourse" value="<%= details.course %>">
        <input type="hidden" name="promusn" value="<%= details.usn %>">
        <input type="hidden" name="promsem" value="<%= details.semester %>">
        <% if (details.semester == "Eight"){ %>
          <button class="promote btn btn-lg btn-primary" type="submit" disabled name="button">Promote</button>
        <% }else{ %>
          <button class="promote btn btn-lg btn-primary" type="submit" name="button">Promote</button>
        <% } %>
      </form>
    </div>

      <!-- Footer -->

      <div class="footer-container row">
        <div class="col-lg-4 main-logo-container">
          <a href="/"><img class="main-logo" src="Images/main-logo.png"></a><br>
          <div class="footer-icons">
            <a href="#"><img class="footer-icon instagram" src="Images/instagram.png" alt="instagram"></a>
            <a href="#"><img class="footer-icon facebook" src="Images/facebook.png" alt="facebook"></a>
            <a href="#"><img class="footer-icon twitter" src="Images/twitter.png" alt="twitter"></a>
            <a href="#"><img class="footer-icon youtube" src="Images/youtube.png" alt="youtube"></a>
          </div>
        </div>

        <!-- Contacts -->

        <div class="col-lg-4 contact">
          <h3 class="contact-head">Contacts:</h3>
          <ul>
            <li class="contact-list"><img class="contact-icon" src="Images/phone.png" alt="phone"> : + 2480 23412</li>
            <li class="contact-list"><img class="contact-icon" src="Images/whatsapp.png" alt="whatsapp"> : + 91 933634466</li>
            <li class="contact-list"><img class="contact-icon" src="Images/email.png" alt="email"> : abcdcollege@gmail.com</li>
          </ul>
        </div>

        <!-- Address -->

        <div class="col-lg-4 address">
          <h3 class="address-head">Address:</h3>
          <p>
            Street: 10, Madhuban Indl. Est.,<br>
            Mahakali Caves Road, Andheri (west)<br>
            City: Mumbai<br>
            State/province/area: Maharashtra<br>
            Zip code: 400093<br>
          </p>
        </div>

      </div>
      <div class="copyright">
        <p>Copyright © 2022 Flchackathon.com All rights reserved.</p>
      </div>

  </main>
  <script src="https://kit.fontawesome.com/b2986d2337.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
  <script type="text/javascript">
    var prevScrollpos = window.pageYOffset;
    window.onscroll = function() {
    var currentScrollPos = window.pageYOffset;
    if (prevScrollpos > currentScrollPos) {
      document.getElementById("navbar-cont").style.top = "0";
    } else {
      document.getElementById("navbar-cont").style.top = "-11rem";
    }
    prevScrollpos = currentScrollPos;
    }
  </script>
</body>

</html>
